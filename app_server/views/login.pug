extends layout

block content
    doctype html
    html
        head
            meta(charset='UTF-8')
            title Registration Form
            meta(name='viewport', content='width=device-width, initial-scale=1')
        body
            .container
                // - Heading
                header.heading 
                    h1 Login
                hr

                // - Form starting
                form(action='/submit', method='POST')
                    .row

                        
                        // - For Email
                        .col-sm-12
                            .row
                                .col-xs-4
                                    label(for='email') Email:
                                .col-xs-8
                                    input#email.form-control(type='email', name='email', placeholder='Enter your email')

                        // - For Password
                        .col-sm-12
                            .row
                                .col-xs-4
                                    label(for='password') Password:
                                .col-xs-8
                                    input#password.form-control(type='password', name='password', placeholder='Enter your Password')

                        

                // - Submit Button
                .col-sm-12
                    button.btn.btn-warning(type='Login') Submit
